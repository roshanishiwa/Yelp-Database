<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YelpDB"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="YelpDB.CheckinChart"
        mc:Ignorable="d"
        Title="Check-Ins" Height="600" Width="800">
    <Grid>
        <ScrollViewer HorizontalAlignment="Left" Height="535" Margin="10,15,0,0" VerticalAlignment="Top" Width="775">
            <chartingToolkit:Chart Title="Number of Checkins Per Month" Name="checkinChart" Height="500" Width="708">
                <chartingToolkit:Chart.DataContext>
                    <PointCollection>1,10 2,20 3,30 4,40</PointCollection>
                </chartingToolkit:Chart.DataContext>
                <chartingToolkit:ColumnSeries DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}" Title=" Number of Checkins"/>
            </chartingToolkit:Chart>
        </ScrollViewer>
    </Grid>
</Window>