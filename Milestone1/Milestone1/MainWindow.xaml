<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" FontSize ="14" Margin="212,22,0,0" VerticalAlignment="Top"/>
        <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" FontSize ="14" Margin="218,59,0,0" VerticalAlignment="Top" />
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" Margin="274,24,0,0" FontSize ="14" VerticalAlignment="Top" Width="240" SelectionChanged="stateList_SelectionChanged"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" Margin="277,62,0,0" FontSize ="14" VerticalAlignment="Top" Width="240" SelectionChanged="cityList_SelectionChanged"/>
        <DataGrid x:Name="businessGrid" HorizontalAlignment="Center" Height="285" FontSize ="14" Margin="0,104,0,0" VerticalAlignment="Top" Width="476" SelectionChanged="businessGrid_SelectionChanged"/>

    </Grid>
</Window>
